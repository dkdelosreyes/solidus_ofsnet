<% url = spree.product_path(product) %>
<% price = product.price_for(current_pricing_options, false) %>
<% money = price.money %>
<% is_sale = price.on_sale? %>
<% image = product.images.any? ? product.images.first.attachment.url : asset_pack_path('media/images/ofs/products/placeholder-2.jpg') %>

<div class="product-box">
  <div class="img-wrapper">
    <% if is_sale %>
      <div class="lable-block">
        <span class="lable3"><%= t('labels.sale') %></span>
      </div>
    <% end %>

    <div class="front">
      <a href="<%= url %>">
        <img src="<%= image %>" class="img-fluid blur-up lazyload bg-img" alt="">
      </a>
    </div>
    <div class="cart-info cart-wrap">
      <a href="<%= url %>"><i class="ti-shopping-cart"></i></a>

      <!-- <a href="javascript:void(0)" title="Add to Wishlist"><i class="ti-heart" aria-hidden="true"></i></a> -->
      <a href="#" data-toggle="modal" data-target="#quick-view" title="Quick View"
        data-name="<%= product.name %>"
        data-image="<%= image %>"
        data-price='<%= "#{money.to_d} #{selected_pricing_options.currency}" %>'
        data-details="<%= product_description(product) %>"
        data-view-detail="<%= url %>" >
        <i class="ti-search" aria-hidden="true"></i>
      </a>
      <!-- <a href="#" title="Compare"><i class="ti-reload" aria-hidden="true"></i></a> -->
    </div>
  </div>
  <div class="product-detail">
    <!-- <div class="rating"><i class="fa fa-star"></i> <i class="fa fa-star"></i> <i
        class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i></div> -->
    <a href="<%= url %>">
      <h6><%= product.name %></h6>
    </a>
    <h4>
      <%= "#{money.to_d} #{selected_pricing_options.currency}" %>
      <del><%= price.original_price if is_sale %></del>
    </h4>

    <!-- <ul class="color-variant">
      <li class="bg-light0"></li>
      <li class="bg-light1"></li>
      <li class="bg-light2"></li>
    </ul> -->
  </div>
</div>