<% if flash[:recaptcha_error] %>
  <div class="flash errors"><%= flash[:recaptcha_error] %></div>
<% end %>

<div id="forgot-password">
  <h6><%= I18n.t('spree.forgot_password') %></h6>

  <p><%= I18n.t('spree.instructions_to_reset_password') %></p>

  <%= form_for Spree::User.new, as: :spree_user, url: spree.admin_reset_password_path do |f| %>
    <p>
      <%= f.label :email, I18n.t('spree.email') %><br />
      <%= f.email_field :email, required: true %>
    </p>

    <%= render partial: 'spree/shared/recaptcha', locals: { action: 'admin_password_recover' } %>

    <p>
      <%= f.submit I18n.t('spree.reset_password'), class: 'button primary mt-3' %>
    </p>
  <% end %>
</div>
